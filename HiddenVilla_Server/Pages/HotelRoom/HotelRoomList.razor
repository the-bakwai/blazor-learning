@page "/hotel-room"
@using global::Models
@inject Business.Repositories.IRepositories.IHotelRoomRepository HotelRoomRepository 

<div class="row mt-4">
    <div class="col-8">
        <h4 class="card-title text-info">Hotel Rooms</h4>
    </div>
    <div class="col-3 offset-1">
        <NavLink href="hotel-room/create" class="btn btn-info form-control">Add New Room</NavLink>
    </div>
</div>
<div class="row mt-4">
    <div class="col-12"></div>
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Name</th>
            <th>Occupancy</th>
            <th>Rate</th>
            <th>Sqft</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @if (HotelRooms.Any())
        {
            @foreach (var room in HotelRooms)
            {
                <tr>
                    <td>@room.Name</td>
                    <td>@room.Occupancy</td>
                    <td>@room.RegularRate.ToString("c")</td>
                    <td>@room.SqFt</td>
                    <td></td>
                </tr>
            }    
        }
        else
        {
            <tr>
                <td colspan="5">No records found</td>
            </tr>
        }
        
        </tbody>
    </table>
</div>

@code {
    private IEnumerable<HotelRoomDto> HotelRooms { get; set; } = new List<HotelRoomDto>();

    protected override async Task OnInitializedAsync()
    {
        HotelRooms = await HotelRoomRepository.GetAllHotelRooms();
    }

}