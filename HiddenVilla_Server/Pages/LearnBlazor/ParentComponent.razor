@page "/parentcomponent"
@using Microsoft.AspNetCore.Authentication

<h1 class="text-danger">Parent child Component</h1>
<CascadingValue Value="messageForGrandChild" Name="MessageFromGrandParent">
    <CascadingValue Value="LuckyNumber" Name="GrandparentsLuckyNumber">
        <ChildComponent Title="From parent component" OnClickBtnMethod="ShowMessage">
            <ChildContent>
                This is a render fragement
            </ChildContent>
            <DangerChildContent>Danger content from parent</DangerChildContent>
        </ChildComponent>
    </CascadingValue>
</CascadingValue>
<AnotherChildComponent placeholder="Placeholder default123"/>
<p>
    <b>@messageText</b>
</p>

@code {

    private string messageForGrandChild = "this is a message for the grand child";
    public string LuckyNumber { get; set; } = "7";
    private string messageText = "";

    private void ShowMessage(MouseEventArgs e)
    {
        messageText = "Text from parent";
    }

}